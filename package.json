{
  "name": "appengine-starter",
  "description": "AppEngine starter for Node, Express and React",
  "version": "1.0.0",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "install:server": "npm i",
    "install:client": "cd client && npm i",
    "install:all": "npm run install:server && npm run install:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start:server": "nodemon",
    "start:client": "cd client && npm run start",
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "deploy": "npm run build && gcloud app deploy",
    "browse": "gcloud app browse"
  },
  "dependencies": {
    "@google-cloud/datastore": "6.6.2",
    "@google-cloud/firestore": "4.15.1",
    "@google-cloud/logging-bunyan": "3.1.1",
    "@google-cloud/storage": "5.16.0",
    "body-parser": "1.19.0",
    "bunyan": "1.8.15",
    "compression": "1.7.4",
    "express": "4.17.1",
    "http-proxy-middleware": "2.0.1"
  },
  "devDependencies": {
    "@types/bunyan": "1.8.7",
    "@types/compression": "1.7.2",
    "@types/express": "4.17.13",
    "concurrently": "6.3.0",
    "nodemon": "2.0.15",
    "prettier": "2.4.1",
    "typescript": "4.4.4"
  },
  "nodemonConfig": {
    "watch": [
      ".",
      "package.json"
    ],
    "ignore": [
      "dist",
      "package-lock.json",
      "src/**/*.test.*"
    ],
    "ext": "ts",
    "exec": "npm run build:server && GOOGLE_APPLICATION_CREDENTIALS=./credentials.json node dist/index.js"
  },
  "prettier": {
    "printWidth": 120
  }
}
